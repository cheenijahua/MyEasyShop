<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="exmaple.easyshop.main.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="市场"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        android:layout_below="@+id/main_toolbar"
        >

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#fcfcfc"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="市场"
            android:textSize="15sp"
            android:drawableTop="@drawable/selector_shop"
            />
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="消息"
            android:textSize="15sp"
            android:drawableTop="@drawable/selector_ic_chat"
            />
        <TextView
            android:id="@+id/tv_mail_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="通讯录"
            android:textSize="15sp"
            android:drawableTop="@drawable/selector_ic_identity"
            />
        <TextView
            android:id="@+id/tv_me"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="个人"
            android:textSize="15sp"
            android:drawableTop="@drawable/selector_ic_people"
            />
    </LinearLayout>
</RelativeLayout>
